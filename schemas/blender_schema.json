{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["benchmark_name", "timestamp", "results"],
  "properties": {
    "benchmark_name": {
      "type": "string",
      "const": "blender"
    },
    "timestamp": {
      "type": "number"
    },
    "results": {
      "type": "object",
      "required": ["meta", "build", "device_runs"],
      "properties": {
        "meta": {
          "type": "object",
          "required": ["benchmark_name", "host", "platform", "timestamp"],
          "properties": {
            "benchmark_name": {
              "type": "string",
              "const": "blender"
            },
            "host": {
              "type": "string"
            },
            "platform": {
              "type": "string"
            },
            "timestamp": {
              "type": "number"
            },
            "benchmark_url": {
              "type": "string"
            }
          }
        },
        "build": {
          "type": "object",
          "required": ["launcher_path", "build_time_seconds"],
          "properties": {
            "launcher_path": {
              "type": "string"
            },
            "build_time_seconds": {
              "type": "number",
              "minimum": 0
            },
            "notes": {
              "type": "string"
            }
          }
        },
        "device_runs": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["device_framework", "scenes", "success", "elapsed_seconds"],
            "properties": {
              "device_framework": {
                "type": "string",
                "enum": ["CPU", "CUDA", "HIP", "OPENCL", "OPTIX", "METAL"]
              },
              "scenes": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "success": {
                "type": "boolean"
              },
              "elapsed_seconds": {
                "type": "number",
                "minimum": 0
              },
              "scene_results": {
                "type": "object"
              },
              "total_score": {
                "type": "number",
                "minimum": 0
              },
              "raw_json": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "timestamp": {
                      "type": "string"
                    },
                    "blender_version": {
                      "type": "object"
                    },
                    "benchmark_launcher": {
                      "type": "object"
                    },
                    "benchmark_script": {
                      "type": "object"
                    },
                    "scene": {
                      "type": "object"
                    },
                    "system_info": {
                      "type": "object",
                      "properties": {
                        "bitness": {
                          "type": "string"
                        },
                        "machine": {
                          "type": "string"
                        },
                        "system": {
                          "type": "string"
                        },
                        "dist_name": {
                          "type": "string"
                        },
                        "dist_version": {
                          "type": "string"
                        },
                        "devices": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "required": ["type", "name"],
                            "properties": {
                              "type": {
                                "type": "string",
                                "enum": ["CPU", "CUDA", "HIP", "OPENCL", "OPTIX", "METAL"]
                              },
                              "name": {
                                "type": "string"
                              },
                              "is_display": {
                                "type": "boolean"
                              }
                            }
                          }
                        },
                        "num_cpu_sockets": {
                          "type": "integer",
                          "minimum": 1
                        },
                        "num_cpu_cores": {
                          "type": "integer",
                          "minimum": 1
                        },
                        "num_cpu_threads": {
                          "type": "integer",
                          "minimum": 1
                        }
                      }
                    },
                    "device_info": {
                      "type": "object",
                      "properties": {
                        "device_type": {
                          "type": "string",
                          "enum": ["CPU", "CUDA", "HIP", "OPENCL", "OPTIX", "METAL"]
                        },
                        "compute_devices": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "required": ["type", "name"],
                            "properties": {
                              "type": {
                                "type": "string"
                              },
                              "name": {
                                "type": "string"
                              },
                              "is_display": {
                                "type": "boolean"
                              }
                            }
                          }
                        },
                        "num_cpu_threads": {
                          "type": "integer",
                          "minimum": 1
                        }
                      }
                    },
                    "stats": {
                      "type": "object",
                      "properties": {
                        "device_peak_memory": {
                          "type": "number",
                          "minimum": 0
                        },
                        "number_of_samples": {
                          "type": "integer",
                          "minimum": 0
                        },
                        "time_for_samples": {
                          "type": "number",
                          "minimum": 0
                        },
                        "samples_per_minute": {
                          "type": "number",
                          "minimum": 0
                        },
                        "total_render_time": {
                          "type": "number",
                          "minimum": 0
                        },
                        "render_time_no_sync": {
                          "type": "number",
                          "minimum": 0
                        },
                        "time_limit": {
                          "type": "number",
                          "minimum": 0
                        }
                      }
                    }
                  }
                }
              },
              "device_name": {
                "type": "string"
              }
            }
          }
        },
        "scenes_tested": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "successful_runs": {
          "type": "integer",
          "minimum": 0
        },
        "total_devices_tested": {
          "type": "integer",
          "minimum": 0
        }
      }
    }
  }
}