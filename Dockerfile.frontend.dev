# Development Dockerfile for Angular frontend
FROM docker.io/node:20-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./
COPY angular.json ./
COPY tsconfig*.json ./

# Install dependencies
RUN npm ci
RUN npm install -g @angular/cli

# Copy source code
COPY src/ ./src/

# Expose Angular dev server port
EXPOSE 4200

# Start Angular development server with host binding for Docker
CMD ["npm", "run", "start", "--", "--host", "0.0.0.0", "--port", "4200", "--configuration", "development"]